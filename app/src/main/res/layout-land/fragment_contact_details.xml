<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="3"
    tools:context="samuel.example.com.arxict.ui.fragment.ContactDetailsFragment"
    android:orientation="horizontal">

    <!-- TODO: Update blank fragment layout -->
    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.2"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/user"
            android:scaleType="fitXY"
            android:id="@+id/user_pic"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SaMUEL"
            android:textSize="@dimen/text_size"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:layout_gravity="bottom"
            android:padding="@dimen/dp_16"
            android:id="@+id/user_name"
            />
    </FrameLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1.8"
        android:orientation="vertical"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="@dimen/mid_pic"
                android:layout_height="@dimen/mid_pic"
                android:src="@drawable/ic_telephone_icon"
                android:layout_margin="@dimen/dp_16"
                android:id="@+id/phone_Img"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="01201842678"
                    android:paddingTop="@dimen/small_pic"
                    android:paddingStart="@dimen/dp_8"
                    android:paddingLeft="@dimen/dp_8"
                    android:id="@+id/phone_num"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/mobile"
                    android:paddingTop="@dimen/dp_4"
                    android:paddingStart="@dimen/dp_8"
                    android:paddingLeft="@dimen/dp_8" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            android:layout_marginStart="@dimen/dp_60"
            android:layout_marginLeft="@dimen/dp_60"
            android:layout_marginTop="@dimen/dp_8"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="@dimen/mid_pic"
                android:layout_height="@dimen/mid_pic"
                android:src="@drawable/ic_email"
                android:layout_margin="@dimen/dp_16"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SamuelSamer952@gmail.com"
                    android:paddingTop="@dimen/small_pic"
                    android:paddingStart="@dimen/dp_8"
                    android:paddingLeft="@dimen/dp_8"
                    android:id="@+id/email"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/email"
                    android:paddingTop="@dimen/dp_4"
                    android:paddingStart="@dimen/dp_8"
                    android:paddingLeft="@dimen/dp_8" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            android:layout_marginStart="@dimen/dp_60"
            android:layout_marginLeft="@dimen/dp_60"
            android:layout_marginTop="@dimen/dp_8"/>


    </LinearLayout>




</LinearLayout>
